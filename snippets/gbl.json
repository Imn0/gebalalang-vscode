{
    "Procedure Declaration": {
        "prefix": "procedure",
        "body": [
            "PROCEDURE ${1:procedureName}(${2:parameters}) IS",
            "    ${3:variables}",
            "BEGIN",
            "    ${4:# Procedure body}",
            "END"
        ],
        "description": "Declare a new procedure"
    },
    "Program Declaration": {
        "prefix": "program",
        "body": [
            "PROGRAM IS",
            "    ${1:variables}",
            "BEGIN",
            "    ${2:# Program body}",
            "END"
        ],
        "description": "Declare a new program"
    },
    "For Loop": {
        "prefix": "for to",
        "body": [
            "FOR ${1:variable} FROM ${2:start} TO ${3:end} DO",
            "    ${4:# Loop body}",
            "ENDFOR"
        ],
        "description": "Create a for loop"
    },
    "For Down to Loop": {
        "prefix": "for downto",
        "body": [
            "FOR ${1:variable} FROM ${2:start} DOWNTO ${3:end} DO",
            "    ${4:# Loop body}",
            "ENDFOR"
        ],
        "description": "Create a down to for loop"
    },
    "While Loop": {
        "prefix": "while",
        "body": [
            "WHILE ${1:condition}  DO",
            "    ${2:# Loop body}",
            "ENDWHILE"
        ],
        "description": "Create a while loop"
    },
    "Repeat": {
        "prefix": "repeat",
        "body": [
            "REPEAT",
            "    ${1:# Loop body}",
            "UNTIL ${2:condition}"
        ],
        "description": "Create a repeat loop"
    },
    "If" : {
        "prefix": "if",
        "body": [
            "IF ${1:condition} THEN",
            "    ${2:# commands}",
            "ENDIF"
        ],
        "description": "Create an if statement"
    },
    "If Else" : {
        "prefix": "if else",
        "body": [
            "IF ${1:condition} THEN",
            "    ${2:# commands}",
            "ELSE",
            "    ${3:# commands}",
            "ENDIF"
        ],
        "description": "Create an if else statement"
    },
    "Read Input": {
        "prefix": "read",
        "body": ["READ ${1:variable};"],
        "description": "Read input from user"
    },
    "Write Output": {
        "prefix": "write",
        "body": ["WRITE ${1:variable};"],
        "description": "Write output to console"
    }
}
